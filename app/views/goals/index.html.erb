<%= image_tag("logo.gif",:align => 'left',:width => '100px',:height => '100px') %>

<ul class="nav nav-tabs">
  <li><a href="/goal_instances?user_id=<%= session[:current_user]%>">My Goals</a></li>
  <li class="active"><a href="#">Find Goals</a></li>
  <li><a href="/friends/index">Friend's Goals</a></li>
</ul>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<div style="float: right;"><%= link_to 'Create Goal', new_goal_path %></div>		

<form class="form-search" role="search" action=<%=request.path%>>
  <div class="input-append">
     <input name="search" type="text" class="aearch-query btn-large" placeholder="Search Goals..." style="padding: 12px;" />
     <button type="submit" class="btn btn-small">
      <i class="icon-search"></i>
      Search
     </button>
   </div>
</form>

<%= will_paginate @goals,renderer: BootstrapPagination::Rails%>
<br />

	<% @goals.each_with_index do |goal,index| %>
	<% if (index+1)%6 == 0%>
		<div class="row">
	<%end%>
	<div class="col-sm-12 col-md-2">
		<div class="thumbnail">
		  	<%= image_tag goal.picture.url, :width => "130px", :height => "130px" %>
		  	<div class="caption" style="text-align: center">
		  		<em><h4><%= link_to goal.title , goal%><span class="badge"><%= goal.goal_instances.length%></span></h4></em>
		  	</div>
	   </div>
	</div>
	<% if (index+1)%6 == 0%>
		</div>
	<%end%>
	<% end %>
	
<br />


