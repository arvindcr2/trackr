<div class="container container-g">

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<div style="float: right;"><%= link_to 'Create Goal', new_goal_path %></div>		

<form role="search" action=<%=request.path%>>
<div class="col-lg-6">
    <div class="input-group">
      <input name="search" type="text" class="form-control" placeholder="Search Goals...">
      <span class="input-group-btn">
        <button class="btn btn-default" type="submit">Search <i class="glyphicon glyphicon-search"></i></button>
      </span>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->
</form>

<br />
<br />

<% @goals.each_with_index do |goal,index| %>
<% if (index+1) % 3 == 0 %>
	<div class="row">
<%end%>
<div class="col-sm-12 col-md-2">
	<div class="thumbnail">
	  	<%= image_tag goal.picture.url, :width => "130px", :height => "130px" %>
	  	<div class="caption" style="text-align: center">
	  		<em><h4><%= link_to goal.title , goal%><span class="badge"><%= goal.goal_instances.length%></span></h4></em>
	  	</div>
   </div>
</div>
<% if (index+1) % 3 == 0 %>
	</div>
<%end%>
<% end %>
	
<br />
<%= will_paginate @goals,renderer: BootstrapPagination::Rails%>
</div>

