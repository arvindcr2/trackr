<% @goal_instances.each do |goal_instance| %>
  <tr>
    <td><%= unless goal_instance.goal.nil? 
         link_to goal_instance.goal.title, goal_instance
      end%> </td>
    <td> <%= unless goal_instance.goal.nil?
          goal_instance.goal.description 
        end %></td> 
    <td><%= goal_instance.start_date %></td>
    <td><%= goal_instance.end_date %></td>
    <td><%= goal_instance.cheer_ons %></td>
  </tr>
<% end %>
